                      <DataGridTextColumn Width="Auto" Header="Font Size" IsReadOnly="True" Binding="{Binding FontSize}" />
                      <DataGridTextColumn Width="Auto" Header="Font Color" IsReadOnly="True" Binding="{Binding FontColor}" />
                    </DataGrid.Columns>
                  </DataGrid>
                </Grid>
              </GroupBox>
              <StackPanel HorizontalAlignment="Left" Margin="5,0,0,0" Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="11">
                <Viewbox Margin="0" Stretch="Fill" VerticalAlignment="Center" Height="30">
                  <CheckBox Name="chkPrintActive" IsChecked="True" Content="" FlowDirection="LeftToRight" Foreground="#FF000000" FontSize="11" Checked="chkPrintActive_Checked" />
                </Viewbox>
                <TextBlock Height="25" TextWrapping="Wrap" Text="Printing Active" />
              </StackPanel>
              <StackPanel Margin="5,0,0,0" Orientation="Horizontal" Grid.Row="11" VerticalAlignment="Center" Grid.Column="1">
                <Viewbox Margin="0" VerticalAlignment="Center" Height="30" Stretch="Fill">
                  <CheckBox Name="chkEnableSOrder" Content="" HorizontalContentAlignment="Right" FlowDirection="LeftToRight" Foreground="#FF000000" FontSize="11" Checked="chkEnableSOrder_Checked" />
                </Viewbox>
                <TextBlock HorizontalAlignment="Right" Height="25" TextWrapping="Wrap" Text="With Image Editing " Margin="0,2.5,0,0" VerticalAlignment="Top" />
              </StackPanel>
              <StackPanel Grid.Column="3" Margin="0,0,8,-3" Orientation="Horizontal" Grid.Row="11" Height="59.83" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button Name="btnSaveAutoCorrect" Margin="0,0,0,10" HorizontalAlignment="Left" FontWeight="Bold" FontSize="18.667" Content="Save" Width="127" Style="{DynamicResource ButtonStylesubmit}" Foreground="#FFFFFFFF" Height="53" IsDefault="{Binding IsSelected, ElementName=TabSemiOrder}" Click="btnSaveAutoCorrect_Click" />
                <Button Name="btnBackAutoCorrect" Margin="0,0,0,10" Width="127" HorizontalAlignment="Left" FontWeight="Bold" FontSize="18.667" Content="Back" Style="{DynamicResource ButtonStyleRed}" Foreground="#FFFFFFFF" Height="53" Click="btnBack_Click" />
              </StackPanel>
            </Grid>
          </Border>
        </Grid>
      </ScrollViewer>
    </Border>
    <Grid Name="GrdPrint" Margin="0" Visibility="Collapsed">
      <Grid Margin="0">
        <Border Background="#99000000" Visibility="{Binding Visibility}">
          <Border HorizontalAlignment="Center" Height="400" Margin="0,0,8,0" VerticalAlignment="Center" Width="700" Background="#FFFFFFFF" CornerRadius="5" BorderThickness="2" BorderBrush="#FF353535">
            <Grid Margin="0">
              <ListBox Name="lstGraphics" Visibility="Visible" BorderThickness="0" Background="#00FFFFFF" Padding="10" ScrollViewer.HorizontalScrollBarVisibility="Auto" ItemContainerStyle="{DynamicResource ListBoxItemStyle}" HorizontalAlignment="Center" Height="410" Margin="0" VerticalAlignment="Center" Width="710" Template="{StaticResource ListBoxControlTemplate}" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalContentAlignment="Center" />
              <Button Content="Close" HorizontalAlignment="Right" Height="51" Margin="0,-30.5,-25,0" VerticalAlignment="Top" Width="75" Style="{DynamicResource ButtonStyleCancel}" Click="Button_Click" />
            </Grid>
          </Border>
        </Border>
      </Grid>
    </Grid>
    <!--<dic:DynamicImgCrop x:Name="ucDynamicImgCrop" Visibility="Collapsed" Margin="20,20,20,20" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
  </Grid>
</UserControl>