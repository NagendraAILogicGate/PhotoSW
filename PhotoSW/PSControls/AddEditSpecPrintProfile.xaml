                <Image Stretch="Uniform" RenderOptions.BitmapScalingMode="HighQuality" Height="Auto" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding FilePath, Converter={StaticResource Imageconverter}, IsAsync=True}" />
              </Button>
              <TextBlock Margin="0" Grid.Row="1" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Photoname}" />
            </Grid>
          </DataTemplate>
        </Setter.Value>
      </Setter>
      <Setter Property="ItemsControl.ItemsPanel">
        <Setter.Value>
          <ItemsPanelTemplate>
            <WrapPanel Orientation="Vertical" Background="#00FFFFFF" Width="675" Height="375" Margin="5" />
          </ItemsPanelTemplate>
        </Setter.Value>
      </Setter>
      <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
      <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
    </Style>
